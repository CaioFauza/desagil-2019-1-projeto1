<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageType">


    <Button
        android:id="@+id/buttonNewMessage"
        android:layout_width="216dp"
        android:layout_height="98dp"
        android:layout_marginBottom="232dp"
        android:background="@drawable/light_blue_rectangle_button"
        android:text="Nova mensagem"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonOldMessages"
        android:layout_width="216dp"
        android:layout_height="98dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/light_blue_rectangle_button"
        android:text="Mensagem pronta"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="79dp"
        android:layout_height="37dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/light_blue_rectangle_button"
        android:drawableBottom="@drawable/ic_keyboard_backspace_black_24dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>